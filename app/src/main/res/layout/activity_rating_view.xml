<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".search">

    <TextView
        android:id="@+id/className"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/allcorners"
        android:padding="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="382dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/className">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topcorners"

                android:padding="10dp"
                android:text="Prof Name"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/classNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Class Num"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/profName" />

            <TextView
                android:id="@+id/classDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottomcorner"
                android:padding="10dp"
                android:text="Decription"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/classNumber"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/deadLines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/topcorners"
                android:padding="10dp"
                android:text="Deadlines:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/classDescription"
                tools:layout_editor_absoluteX="-34dp" />

            <TextView
                android:id="@+id/deadNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/deadLines"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/deadLines" />

            <TextView
                android:id="@+id/etr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Easy to Reach:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/deadLines"
                tools:layout_editor_absoluteX="-53dp" />

            <TextView
                android:id="@+id/etrNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/etr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etr" />

            <TextView
                android:id="@+id/fair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Fair Grader:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/etr"
                tools:layout_editor_absoluteX="-25dp" />

            <TextView
                android:id="@+id/fairNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/fair"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fair" />

            <TextView
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Amount of Group Work:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/fair"
                tools:layout_editor_absoluteX="-16dp" />

            <TextView
                android:id="@+id/groupNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/group"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/group" />

            <TextView
                android:id="@+id/hw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Amount of Homework:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/group"
                tools:layout_editor_absoluteX="-16dp" />

            <TextView
                android:id="@+id/hwNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/hw"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hw" />

            <TextView
                android:id="@+id/online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Online/In Person:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/hw"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/onlineNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="Online"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/online"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/online" />

            <TextView
                android:id="@+id/pap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Amount of Papers:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/online"
                tools:layout_editor_absoluteX="-16dp" />

            <TextView
                android:id="@+id/papNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/pap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pap" />


            <TextView
                android:id="@+id/pres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Amount of presentaions:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/pap"
                tools:layout_editor_absoluteX="-16dp" />

            <TextView
                android:id="@+id/presNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/pres"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pres" />


            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Overall Rating:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/pres"
                tools:layout_editor_absoluteX="-16dp" />

            <TextView
                android:id="@+id/ratingNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/rating"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rating" />

            <TextView
                android:id="@+id/read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="Amount of Reading:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/rating" />

            <TextView
                android:id="@+id/readNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/read"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/read" />


            <TextView
                android:id="@+id/repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bottomcorner"
                android:padding="10dp"
                android:text="Would You Choose This Professor Again?:"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/read" />

            <TextView
                android:id="@+id/repeatY_N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:paddingEnd="10dp"
                android:text="Yes"
                android:textAlignment="textEnd"
                android:textColor="#2E7D32"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/repeat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/repeat" />




        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>